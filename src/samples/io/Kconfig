config IO_SAMPLES
        bool "IO samples"
        default y

config AIO_SAMPLES
        bool "AIO samples"
        depends on USE_AIO && IO_SAMPLES
        default y

config GPIO_SAMPLES
        bool "GPIO samples"
        depends on USE_GPIO && IO_SAMPLES
        default y

config PWM_SAMPLES
        bool "PWM samples"
        depends on USE_PWM && IO_SAMPLES
        default y

config SPI_SAMPLES
        bool "SPI samples"
        depends on USE_SPI && IO_SAMPLES
        default y
